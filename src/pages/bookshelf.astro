---
import AppLayout from "@layouts/AppLayout.astro";
import Header from "@components/Header.astro";
import BookCard from "@components/BookCard.astro";
import { books } from "@data/books";
---

<AppLayout title="Bookshelf | Kevin Zuniga Cuellar">
  <Header title="Bookshelf" />
  <p
    class="max-w-prose mb-10 font-normal dark:text-zinc-400 text-zinc-600 leading-relaxed"
  >
    Reading is one of my favorite things to do. Need book recommendations? You
    are in the right place.
  </p>
  <ul
    class="grid grid-cols-1 justify-items-center gap-10 md:justify-items-start"
  >
    {
      books.map((book) => (
        <BookCard
          title={book.title}
          author={book.author}
          comment={book.comment}
          year={book.year}
          img={book.img}
          loading={book.loading as "lazy" | "eager"}
          reading={book.reading}
        />
      ))
    }
  </ul>
</AppLayout>
