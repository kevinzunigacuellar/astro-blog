---
import AppLayout from "@layouts/AppLayout.astro";
import { Image } from "astro:assets";
import authorImage from "../assets/me.jpeg";
import technologies from "@data/technologies.json";
import Skill from "@components/Skill.astro";
import { author } from "@data/socials";
---

<AppLayout>
  <header class="sm:flex sm:items-center sm:justify-between">
    <Image
      src={authorImage}
      class="rounded-full aspect-square w-40 overflow-hidden inline-flex"
      alt="Image of the author"
      loading="eager"
      width={320}
      height={320}
    />
    <div class="mt-8 max-w-lg 2xl:max-w-xl sm:my-0 sm:order-first">
      <h1
        class="mb-2 text-3xl font-bold tracking-tight dark:text-white text-zinc-900 sm:text-4xl"
      >
        {author}
      </h1>
      <p class="mb-4 dark:text-zinc-300 text-zinc-700">
        Graduate Research Assistant and <a
          href="https://twitter.com/astrodotbuild"
          target="_blank"
          rel="noopener noreferrer"
          class="dark:text-teal-400 text-blue-600 underline">@astrodotbuild</a
        > Maintainer
      </p>
      <p
        class="max-w-prose font-normal dark:text-zinc-400 text-zinc-600 sm:max-w-sm md:max-w-xl leading-relaxed"
      >
        Welcome to my slice of the internet! I am a graduate student in
        mechanical engineering at the University of Vermont. In my free time, I
        build frontend tools and experiment with new web app technologies.
      </p>
    </div>
  </header>
  <section class="mt-10 sm:mt-14" aria-labelledby="section-title">
    <h2
      class="dark:text-zinc-300 text-zinc-700 mb-4 text-2xl font-bold tracking-tight"
      id="section-title"
    >
      Favorite technologies
    </h2>
    <p
      class="max-w-prose mb-8 font-normal dark:text-zinc-400 text-zinc-600 leading-relaxed"
    >
      I love exploring new libraries, programing languages and frameworks. Here
      is a list of technologies that I have worked with at school, side projects
      and open source.
    </p>
    <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      {technologies.map((tech) => <Skill text={tech.text} logo={tech.logo} />)}
    </ul>
  </section>
</AppLayout>
