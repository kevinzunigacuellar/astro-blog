---
import AppLayout from '@layouts/AppLayout.astro';
import ThemeSelect from '@components/ThemeSelect.tsx';
import { Img } from "astro-imagetools/components";
---
<AppLayout>
  <section class="mb-10 sm:flex sm:items-center sm:justify-between">
    <div class="w-40 h-40 rounded-full overflow-hidden">
      <Img src="/public/assets/me.jpeg" objectFit="contain" alt="image of the author" layout="fixed" width={320} height={320} placeholder="blurred" format="webp" loading="eager" decoding="async" formatOptions={{webp: {quality: 95}}} />
    </div>
    <header class="mt-6 max-w-lg sm:my-0 sm:order-first">
      <h1 class="mb-2 text-3xl font-bold tracking-tight text-zinc-900 dark:text-white sm:text-4xl">
        Kevin Zuniga Cuellar
      </h1>
    <h2 class="mb-4 text-zinc-900 dark:text-zinc-300">
      Graduate Research Assistant at the University of Vermont
    </h2>
    <p class="w-full font-normal leading-7 text-zinc-600 dark:text-zinc-400 sm:max-w-sm md:max-w-xl">
      Welcome to my slice of the internet! I am a graduate student in mechanical engineering.
      In my free time I enjoy making websites and experimenting with web app technologies.
    </p>
  </header>
</section>
<ThemeSelect client:load />
</AppLayout>