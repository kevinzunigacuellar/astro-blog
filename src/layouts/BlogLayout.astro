---
import AppLayout from '@layouts/AppLayout.astro'
import { Picture } from 'astro-imagetools/components'
const { content } = Astro.props
const { title, description, heroImage, imageAlt, pubDate } = content
const fullDate = new Date(content.pubDate).toLocaleDateString('en', {
  dateStyle: 'full',
})
---

<AppLayout {title} {description} {heroImage} {imageAlt} {pubDate}>
  <header class='flex flex-col justify-center items-center'>
    <time datetime={pubDate} class='block text-center text-zinc-400 mb-3 text-sm'>
      {fullDate}
    </time>
    <h1
      class='text-2xl sm:text-4xl mb-6 sm:leading-tight font-sans font-bold text-center text-transparent bg-clip-text bg-gradient-to-r from-indigo-500 to-pink-500'
    >
      {title}
    </h1>
    <div class='inline-flex gap-2 justify-center items-center'>
      <div class='aspect-square rounded-full overflow-hidden w-10 h-10'>
        <Picture
          src='/public/assets/me.jpeg'
          height={80}
          width={80}
          loading='eager'
          alt='Picture of the author'
          layout='fixed'
        />
      </div>
      <p class='text-zinc-400 text-sm'>
        <span class='block font-semibold'>Kevin Zuniga Cuellar</span>
        <a
          class='text-blue-400 focus:outline-none focus:underline hover:underline focus:font-medium hover:font-medium block'
          href='https://twitter.com/kevinzunigacuel'
          target='_blank'
          rel='noopener noreferrer'
          >@kevinzunigacuel
        </a>
      </p>
    </div>
    <div class='rounded-xl w-full overflow-hidden my-10 shadow'>
      <Picture src={heroImage} alt={title} loading='eager' />
    </div>
  </header>
  <article
    class='prose prose-invert focus:prose-a:outline-none prose-code:text-pink-400 prose-a:text-pink-400 max-w-none hover:prose-a:underline focus:prose-a:underline prose-a:no-underline prose-img:m-0 prose-headings:text-indigo-500'
  >
    <slot></slot>
  </article>
</AppLayout>
