---
import Tooltip from '@components/Tooltip.astro'
export interface Props {
  text: string
  href: string
}
const { text, href } = Astro.props as Props
---

<a
  class='relative shrink-0 group h-16 w-16 bg-zinc-700 rounded-2xl flex justify-center items-center text-zinc-400 focus:text-zinc-300 hover:text-zinc-300 transition-all hover:ring-2 hover:ring-indigo-500 focus:ring-indigo-500 hover:ring-offset-2 focus:outline-none focus:ring-2 focus:ring-offset-2 ring-offset-slate-700'
  {href}
  aria-label={`Go to ${text}`}
>
  <svg
    xmlns='http://www.w3.org/2000/svg'
    class='h-auto w-8 group-hover:w-12 group-focus:w-12 transition-all fill-current'
    viewBox='0 0 20 20'
  >
    <slot></slot>
  </svg>
  <Tooltip text={text} />
</a>
