---
import { Picture } from "@astrojs/image/components";

export interface Props {
  src: string;
  alt: string;
  loading?: "lazy" | "eager";
}

const { src, alt, loading = "lazy" } = Astro.props;
---

<Picture
  widths={[400, 600, 800, 1200]}
  sizes="(max-width: 800px) 100vw, 1200px"
  aspectRatio={16 / 9}
  src={src}
  loading={loading}
  quality={80}
  alt={alt}
  class="rounded-md overflow-hidden"
/>
